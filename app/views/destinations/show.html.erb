<div class="page-header">
  <h3>Destination: <%= @destination.country %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Trip Name</dt>
      <dd><%= @destination.destination %></dd>

      <dt>Country</dt>
      <dd><%= @destination.country %></dd>

      <dt>Comments</dt>
      <dd><%= @destination.comments %></dd>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/destinations" class="btn btn-primary">
        Back
      </a>
      <a href="/destinations/<%= @destination.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_destination/<%= @destination.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
