<div class="row">
  <div class="col-md-12 text-left">
    <h2>
      Trip Ideas
    </h2>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th class="lead col-md-2">Trip</th>
        <th class="lead col-md-1">Country</th>
        <th class="lead col-md-7">Comments</th>
        <th class="lead col-md-2">Actions</th>
      </tr>

      <% @destinations.each do |destination| %>
      <tr>
        <td><%= destination.destination %></td>
        <td><%= destination.country %></td>
        <td><%= destination.comments %></td>
        <td>
          <a href="/destinations/<%= destination.id %>" class="btn btn-primary btn-xs"><i class="fa fa-eye" aria-hidden="true"></i></a>
          <a href="/destinations/<%= destination.id %>/edit" class="btn btn-warning btn-xs"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          <a href="/delete_destination/<%= destination.id %>" class="btn btn-danger btn-xs"rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="">
  <a href="/destinations/new" class="btn btn-success btn-s"><i class="fa fa-plus" aria-hidden="true"></i>  Add Trip</a>
</div>
