<div class="page-header">
  <div class="col-md-9">
    <h1>
      Destinations
    </h1>
  </div>
  <div class="col-md-3">
    <a href="/destinations/new" class="btn btn-md btn-success">New Destination</a>
  </div>

</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Destination</th>
        <th>Country</th>
        <th>Comments</th>
        <th>Actions</th>
      </tr>

      <% @destinations.each do |destination| %>
      <tr>
        <td><%= destination.destination %></td>
        <td><%= destination.country %></td>
        <td><%= destination.comments %></td>
        <td>
          <a href="/destinations/<%= destination.id %>" class="btn btn-primary">Show</a>
          <a href="/destinations/<%= destination.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_destination/<%= destination.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
