<div class="page-header">
  <h1>
    Dailies
    <a href="/dailies/new" class="btn btn-lg btn-success">New Daily</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Trip ID</th>
        <th>Date</th>
        <th>Activity</th>
        <th>Location</th>
        <th>Comments</th>
        <th>Actions</th>
      </tr>

      <% @dailies.each do |daily| %>
      <tr>
        <td><%= daily.destination_id %></td>
        <td><%= daily.day %></td>
        <td><%= daily.activity %></td>
        <td><%= daily.location %></td>
        <td><%= daily.comments %></td>
        <td>
          <a href="/dailies/<%= daily.id %>" class="btn btn-primary">Show</a>
          <a href="/dailies/<%= daily.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_daily/<%= daily.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
